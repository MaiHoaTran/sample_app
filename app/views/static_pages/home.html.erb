<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_infor" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
        <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.text_heading_1" %></h1>

    <h2>
      <%= t "static_pages.home.text_heading_21" %>
      <%= link_to t("base_title"), "http://www.railstutorial.
      org/" %> <%= t "static_pages.home.text_heading_22" %>.
    </h2>

    <%= link_to t("static_pages.home.text_link_signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: t("static_pages.home.text_img_logo")), "http://rubyonrails.org/" %>
  <%= image_tag("kitten.jpg", alt: t("static_pages.home.text_img_kitten"), id: "kitten") %>
<% end %>
